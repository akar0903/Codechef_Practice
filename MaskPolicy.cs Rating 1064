using System;

public class Test
{
	public static void Main()
	{
		// your code goes here
		int t = int.Parse(Console.ReadLine());
		while(t-->0){
		    string[] arr=Console.ReadLine().Split();
		    int all = int.Parse(arr[0]);
		    int infected = int.Parse(arr[1]);
		    int notinfected = all-infected;
		    int result = Math.Min(infected,notinfected);
		    Console.WriteLine(result);
		}
	}
}
