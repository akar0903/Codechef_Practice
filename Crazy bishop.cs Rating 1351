using System;

class Codechef
{
    public static void Main(string[] args)
    {
        int t = int.Parse(Console.ReadLine());
        for (int g = 0; g < t; g++)
        {
            int n = int.Parse(Console.ReadLine());
            if (n <= 2)
                Console.WriteLine(0);
            else
                Console.WriteLine(2 * n - n / 2 - 3);
        }
    }
}
